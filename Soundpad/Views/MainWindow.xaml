<Window x:Class="Soundpad.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Soundpad.Views"
        xmlns:vm="clr-namespace:Soundpad.ViewModels"
        mc:Ignorable="d"
        Title="Soundpad" 
        Height="650" 
        Width="500">
    
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="Add sound"/>
                    <Separator/>
                    <MenuItem Header="Exit" InputGestureText="Alt+F4"/>
                </MenuItem>

                <MenuItem Header="Edit">
                    <MenuItem/>
                </MenuItem>

                <MenuItem Header="Reference">
                    <MenuItem Header="Open GitHub"
                            Command="{Binding OpenUrlCommand}"
                            CommandParameter="https://github.com/Vlad-Vershinin/Soundpad-Wpf"/>
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
